<div style="height: 10rem;">
  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
    <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    </div>
  <% end %>
</div>

<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="form-group">
    <%= label_tag 'First_name' %>
    <%= text_field_tag 'first_name', @user.first_name, class: "form-control" %>
    <br />
  </div>
  <div class="form-group">
    <%= label_tag 'Last_name' %>
    <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>
    <br />
  </div>
    <div class="form-group">
    <%= label_tag 'Age' %>
    <%= text_field_tag 'age', @user.age, class: "form-control" %>
    <br />
  </div>
    <div class="form-group">
    <%= label_tag 'Email' %>
    <%= text_field_tag 'email', @user.email, class: "form-control" %>
    <br />
  </div>
  <div class="form-group">
    <%= label_tag 'Password' %>
    <%= text_field_tag 'password', @user.password, class: "form-control" %>
    <br />
  </div>
  <div class="form-group">
  <%= label_tag 'Password Confirmation' %>
  <%= text_field_tag 'password_confirmation', @user.password_confirmation, class: "form-control" %>
  <br />
</div>
  <%= submit_tag "Inscription", class: "btn btn-primary" %>
<% end %>
